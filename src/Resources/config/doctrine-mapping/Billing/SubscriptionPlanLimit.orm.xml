<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Parthenon\Billing\Entity\SubscriptionPlanLimit">
        <id name="id" type="uuid" column="id">
            <generator strategy="CUSTOM" />
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator" />
        </id>

        <field name="limit" column="limit_number" type="integer" nullable="false"  />
        <many-to-one field="subscriptionLimit" target-entity="Parthenon\Billing\Entity\SubscriptionLimit" />
        <many-to-one field="subscriptionPlan" target-entity="Parthenon\Billing\Entity\SubscriptionPlan">
        </many-to-one>
    </entity>
</doctrine-mapping>
