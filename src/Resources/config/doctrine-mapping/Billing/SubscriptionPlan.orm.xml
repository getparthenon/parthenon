<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Parthenon\Billing\Entity\SubscriptionPlan">
        <id name="id" type="uuid" column="id">
            <generator strategy="CUSTOM" />
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator" />
        </id>

        <field name="public" column="public" type="boolean" nullable="false"  />
        <field name="name" column="name" type="string" nullable="false"  />
        <field name="externalReference" column="external_reference" type="string" nullable="true"  />
        <field name="externalReferenceLink" column="external_referenceLink" type="string" nullable="true"  />
        <field name="perSeat" column="per_seat" type="boolean" nullable="true"  />
        <field name="free" column="is_free" type="boolean" nullable="true"  />
        <field name="userCount" column="user_count" type="integer" nullable="true"  />
        <one-to-many field="limits" target-entity="Parthenon\Billing\Entity\SubscriptionPlanLimit" mapped-by="subscriptionPlan" orphan-removal="true">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>
        <many-to-many field="features" target-entity="Parthenon\Billing\Entity\SubscriptionFeature" orphan-removal="true">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </many-to-many>
    </entity>
</doctrine-mapping>
